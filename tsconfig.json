{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "esnext",
            "dom"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "dist",
        "jsx": "preserve",
        "types": [
            "@types/node",
            "@types/express"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
